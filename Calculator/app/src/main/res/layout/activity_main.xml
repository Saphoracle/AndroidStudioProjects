<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gb.saphoracle.calculator.MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/btZero"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_alignRight="@+id/btOne"
        android:layout_alignEnd="@+id/btOne"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/btOne"
        android:layout_above="@+id/btZero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/btFour"
        android:layout_above="@+id/btOne"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/btSeven"
        android:layout_above="@+id/btFour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/btTwo"
        android:layout_above="@+id/btZero"
        android:layout_toRightOf="@+id/btOne"
        android:layout_toEndOf="@+id/btOne"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/btFive"
        android:layout_above="@+id/btTwo"
        android:layout_toRightOf="@+id/btFour"
        android:layout_toEndOf="@+id/btFour"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btEight"
        android:layout_above="@+id/btFive"
        android:layout_toRightOf="@+id/btSeven"
        android:layout_toEndOf="@+id/btSeven"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btThree"
        android:layout_alignBottom="@+id/btTwo"
        android:layout_toRightOf="@+id/btTwo"
        android:layout_toEndOf="@+id/btTwo"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/btSix"
        android:layout_above="@+id/btTwo"
        android:layout_toRightOf="@+id/btTwo"
        android:layout_toEndOf="@+id/btTwo"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/btNine"
        android:layout_alignTop="@+id/btEight"
        android:layout_toRightOf="@+id/btFive"
        android:layout_toEndOf="@+id/btFive"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="/"
        android:id="@+id/btDivide"
        android:layout_above="@+id/btSix"
        android:layout_toRightOf="@+id/btNine"
        android:layout_toEndOf="@+id/btNine"
        android:backgroundTint="#b75f5f"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="*"
        android:id="@+id/btMultiply"
        android:layout_above="@+id/btThree"
        android:layout_toRightOf="@+id/btSix"
        android:layout_toEndOf="@+id/btSix"
        android:backgroundTint="#FFB75F5F"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/btSubtract"
        android:layout_alignBottom="@+id/btThree"
        android:layout_toRightOf="@+id/btThree"
        android:layout_toEndOf="@+id/btThree"
        android:backgroundTint="#FFB75F5F"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/btAdd"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btThree"
        android:layout_toEndOf="@+id/btThree"
        android:backgroundTint="#FFB75F5F"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/btEquals"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btTwo"
        android:layout_toEndOf="@+id/btTwo"
        android:backgroundTint="#f0c54f"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvCount"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvResult"
        android:textSize="40dp"
        android:layout_below="@+id/tvCount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="."
        android:id="@+id/btDecimal"
        android:clickable="true"
        android:layout_below="@+id/btOne"
        android:layout_toRightOf="@+id/btZero"
        android:layout_toEndOf="@+id/btZero"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/btClear"
        android:layout_above="@+id/btNine"
        android:layout_alignRight="@+id/btDivide"
        android:layout_alignEnd="@+id/btDivide"
        android:layout_toRightOf="@+id/btEight"
        android:layout_toEndOf="@+id/btEight"
        android:clickable="true"
        android:backgroundTint="#0bdef5"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/tvResult"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
